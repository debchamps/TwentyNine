<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/trump_dialog"
    android:screenOrientation="landscape"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/trumpCardLayout"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        >

        <ImageButton
            android:id="@+id/trumpSeventhBtn"
            android:layout_width="@dimen/trump_card_width"
            android:layout_height="@dimen/trump_card_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blank_card" />

        <ImageButton
            android:id="@+id/trumpHeartBtn"
            android:layout_width="@dimen/trump_card_width"
            android:layout_height="@dimen/trump_card_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hearts_six" />

        <ImageButton
            android:id="@+id/trumpDiamondBtn"
            android:layout_width="@dimen/trump_card_width"
            android:layout_height="@dimen/trump_card_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/diamond_six" />

        <ImageButton
            android:id="@+id/trumpSpadeBtn"
            android:layout_width="@dimen/trump_card_width"
            android:layout_height="@dimen/trump_card_height"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spade_six" />

        <ImageButton
            android:id="@+id/trumpClubBtn"
            android:layout_width="@dimen/trump_card_width"
            android:layout_height="@dimen/trump_card_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/club_six" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/trumpCardLayout"
        android:layout_centerHorizontal="true"
        >
    <TextView
        android:id="@+id/selectTrumpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Trump Card"
        android:textSize="20dp"
        android:textColor="#000000"
        />
    </LinearLayout>

</RelativeLayout>
