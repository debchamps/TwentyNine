<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:screenOrientation="landscape"
    tools:context=".GameScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team1GameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffff00"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/team2GameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffff00"
            android:textSize="25dp" />

    </LinearLayout>

    <!--
        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/back"
            android:layout_centerHorizontal="true"
            android:src="@drawable/trial_two" /> -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:id="@+id/playerTopImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/monkey" />

        <ImageView
            android:id="@+id/player1Cap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cap"
            android:visibility="visible" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:textColor="#ffff00"
            android:id="@+id/callScoreTop"
            android:text=""
            />

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        >

        <ImageView
            android:id="@+id/playerLeftImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/elephant" />
        <ImageView
            android:id="@+id/player2Cap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cap"
            android:visibility="visible" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:id="@+id/callScoreLeft"
            android:textColor="#ffff00"
            android:text="22"
            />

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        >

        <ImageView
            android:id="@+id/playerRightImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/tiger" />

        <ImageView
            android:id="@+id/player4Cap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cap"
            android:visibility="visible" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/callScoreRight"
            android:textSize="25dp"
            android:textColor="#ffff00"
            android:text=""
            />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playedCardLeft"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/playedCardTop"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/playedCardBot"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/playedCardRight"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/bottomPlayerFramLayout"
            android:layout_margin="0dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom ="true"
            >

            <ImageView
                android:id="@+id/playerBottomImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom ="true"
                android:layout_gravity="bottom"
                android:src="@drawable/monkey" />
            <ImageView
                android:id="@+id/player3Cap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/cap"
                android:visibility="visible" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="#ffff00"
                android:id="@+id/callScoreBottom"
                android:text=""
                />

        </FrameLayout>
        <LinearLayout
            android:id="@+id/biddingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/bottomPlayerFramLayout"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonIncrementBidId"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toLeftOf="@+id/buttonIncrementBid"
                android:background="@drawable/green_button"
                android:paddingTop="5dp"
                android:src="@drawable/green_button"
                android:text="16" />

            <Button
                android:id="@+id/buttonStopBid"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toLeftOf="@+id/stopBid"
                android:background="@drawable/red_button"
                android:paddingTop="5dp"
                android:text="PASS" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomCardFirstHandLayout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/bottomPlayerFramLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playerBottomCard1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomCardSecondHandLayout"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/bottomPlayerFramLayout"
            android:visibility="invisible"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@+id/playerBottomCard5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard7"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/playerBottomCard8"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:background="@null"
                android:paddingTop="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
